{
	"root": true,
	"extends": [
		"eslint:recommended",
		"airbnb-base",
		"plugin:prettier/recommended",
		"plugin:vue/recommended",
		"prettier/vue"
	],
	"env": {
		"node": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"trailingComma": "es5"
			}
		],
		"no-unused-vars": "warn",
		"func-names": "off",
		"prefer-const": "warn",
		"spaced-comment": "off",
		"object-shorthand": "warn",
		"prefer-destructuring": "off",
		"vars-on-top": "off",
		"no-restricted-syntax": "off",
		"no-await-in-loop": "off",
		"no-underscore-dangle": "off",
		"no-console": "off",
		"no-plusplus": "off"
	}
}
